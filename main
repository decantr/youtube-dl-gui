#!/usr/bin/python3
import tkinter
from tkinter import Label, Button, Entry, Frame


class app(tkinter.Frame):
	def __init__(self, master=None):
		Frame.__init__(self, master)
		self.master.title('test')
		self.grid()
		self.create()

	def create(self):
		self.lbl = Label(self, text='enter the url')
		self.lbl.grid(columnspan=2, column=0, row=0)
		self.url = Entry(self, text='url')
		self.url.grid(row=2,columnspan=2)
		self.btnv = Button(self, text='video', command=lambda: self.dl())
		self.btnv.grid(row=3,column=0)
		self.btna = Button(self, text='audio', command=lambda: self.dl())
		self.btna.grid(row=3,column=1)

	def dl(self, url):
		print(url)

app().mainloop()
